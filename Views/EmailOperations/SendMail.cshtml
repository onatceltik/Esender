@model Esender.Models.BulkMailModel

@{
    ViewData["Title"] = "Mail Editor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Mail Editor</h2>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="TinyMceEditorPage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <textarea asp-for=@Model.Mail_text class="form-control" id="textarea" rows="25"></textarea>
                    <span asp-validation-for=@Model.Mail_text class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Home">Back</a>
    </div>
}

@section Scripts {
    <script>tinymce.init({ selector: 'textarea' });</script>
}
