@{
    ViewData["Title"] = "Delete e-mail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this e-mail?</h2>
<br />
<div class="col-md-4">
    @Html.AntiForgeryToken()
    <form asp-action="DeleteEmail" asp-controller="EmailOperations">
        <div class="form">
            <input type="text" name="e_mail_address" id="e_mail_address" autocomplete="on" inputmode="email" />
            <br /><br />
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>
</div>
<br />
<a asp-action="Index" asp-controller="Home">Back</a>
